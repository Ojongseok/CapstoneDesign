<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rec_8dp"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_dialog_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 수정"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_comment_modify"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rec_8dp_grey_stroke"
        android:gravity="top"
        android:hint="수정할 내용을 입력해주세요."
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_dialog_select"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_select" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_comment_modify"
        app:layout_constraintTop_toBottomOf="@+id/et_comment_modify">

        <TextView
            android:id="@+id/btn_dialog_modify_complete"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/background_rec_10dp_green"
            android:gravity="center"
            android:text="수정 완료"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_dialog_modify_close"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_rec_10dp_grey"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/text_1"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>